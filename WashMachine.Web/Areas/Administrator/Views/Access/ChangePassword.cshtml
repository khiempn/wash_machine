@model WashMachine.Business.Models.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    ViewBag.PageType = PageTypes.ChangePassword;
}
<style>
    .showhind-pass {
        position: absolute;
        right: 10px;
        top: 7px;
    }
</style>
<div class="manager-list">
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <a class="nav-link active" data-toggle="tab" href="#change_password_tab" role="tab" aria-controls="nav-home" aria-selected="true">Information</a>
        </div>
    </nav>
    <div class="tab-content w-100" id="nav-tabContent" style="padding: 15px">
        <form class="form-area" autocomplete="off" enctype="multipart/form-data" method="post" action="/administrator/access/ChangePassword" novalidate="novalidate">
            <div class="tab-pane box-15" id="change_password_tab" role="tabpanel" aria-labelledby="nav-home-tab">
                @Html.HiddenFor(m => m.Email)
                <input type="hidden" name="BackLink" value="/administrator/access/ChangePassword">
                <div class="row">
                    <div class="col-md-10">
                        <div class="form-group row">
                            <label for="inputPassword" class="col-sm-4 col-form-label">Current password</label>
                            <div class="col-sm-8 form-item">
                                <div style="position:relative;">
                                    @Html.TextBoxFor(model => model.CurrentPassword, new { @class = "form-control", type = "password", id = "id_password", name = "password", autocomplete = "current-password", placeholder = "Current password" })
                                    <span class="icon-eye showhind-pass"><i class="fa fa-eye" aria-hidden="true" id="eye1" onclick="toggle1()"></i></span>
                                </div>
                                @Html.ValidationMessageFor(model => model.CurrentPassword)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-10">
                        <div class="form-group row">
                            <label for="inputPassword" class="col-sm-4 col-form-label">New password</label>
                            <div class="col-sm-8 form-item">
                                <div style="position:relative;">
                                    @Html.TextBoxFor(model => model.NewPassword, new { @class = "form-control", type = "password", id = "new_password", autocomplete = "off", placeholder = "New password" })
                                    <span class="icon-eye showhind-pass"><i class="fa fa-eye" aria-hidden="true" id="eye2" onclick="toggle2()"></i></span>
                                </div>
                                <div>
                                    @Html.ValidationMessageFor(model => model.NewPassword)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-10">
                        <div class="form-group row">
                            <label for="inputPassword" class="col-sm-4 col-form-label">Confirm new password</label>
                            <div class="col-sm-8 form-item">
                                <div style="position:relative;">
                                    @Html.TextBoxFor(model => model.RetypePassword, new { @class = "form-control", type = "password", id = "cf_password", autocomplete = "off", placeholder = "Retype new password" })
                                    <span class="icon-eye showhind-pass"><i class="fa fa-eye" aria-hidden="true" id="eye3" onclick="toggle3()"></i></span>
                                </div>
                                <div>
                                    @Html.ValidationMessageFor(model => model.RetypePassword)
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="form-button" style="float: right;">
                    <a class="btn btn-secondary" href="/">Back</a>
                    <button type="submit" class="btn btn-primary"><i class="far fa-save"></i> Change password</button>
                </div>
            </div>
        </form>
    </div>
</div>
